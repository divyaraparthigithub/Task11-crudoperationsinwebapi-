@model Task11_crud_.Models.CustomerList

<html>
<head>
    <title>Delete Customer</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <h1>Delete Customer</h1>
    <form id="deleteCustomerForm" method="post" asp-action="Delete">
        <input type="hidden" name="customerId" value="@Model.Id" />
        <div>
            <p>
                Are you sure you want to delete the customer <strong>@Model.Name</strong>?
            </p>
        </div>
        <div>
            <button type="submit" onclick="confirmDelete()">Delete</button>
        </div>
        <div>
            <a asp-action="GetCustomerList">Cancel</a>
        </div>
        <div>
            <a asp-action="GetCustomerList">Back to List</a>
        </div>
    </form>
    </body>
